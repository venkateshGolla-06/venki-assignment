
{% comment %} {{ 'custom-product.css' | asset_url | stylesheet_tag }} {% endcomment %}


{% style %}

.custiom-section-bg-container{

background-color: hsla(0, 0%, 0%, 1);
min-height: 100vh;
padding: 40px 20px;
display: "flex";

justify-content: "center";
}
.custom-heading{

color: hsla(0, 0%, 100%, 1);
size: 48px;
padding: 20px 0px;

}
.custom-product-content-alignment{
display: flex;
flex-direction: column;
justify-content: space-between;
align-items:center ;
width: 90%;
gap:20px;
}

*{
color: #fff;
}
.view-button{
    background-color: hsla(0, 0%, 100%, 1);
    height: 51px;
    width: 170px;
    color:
hsla(0, 0%, 0%, 1);
border-radius: 8px;
font-weight:700;
font-size:16px;

}
.product-heading{
    color: hsla(310, 100%, 80%, 1);
    font-weight: 800px;

}
.content-container{
    width: 100%;
}
.image-container{
    width:100%;
    background-image:radial-gradient(hsla(303, 90%, 35%, 1, ),hsla(0, 0%, 0%, 1));
}
.image-size{
    width:100%;
    height:100%;
    object-fit:cover;
}

@media screen and (min-width:768px){
    .custom-product-content-alignment{
        flex-direction: row;
        justify-content:center;
    }
    .content-container{
        width: 50%;
        
    }
    .image-container{
        width:50%;
    }
}


{% endstyle %}


<div class="custiom-section-bg-container">
    <div>
    <h1 class="custom-heading"> {{ section.settings.heading }} </h1>
    <div>
    <div class="custom-product-content-alignment">
        <div class="image-container">
            <img class="image-size" src={{ section.settings.image-section | image_url}} >
        </div>
        <div class="content-container">
            <p class="custom-caption"> --- Cipla Health - Anti Dandruff Shampoo </p>
            <h1 class="product-heading"> Tugain Essentials Anti Dandruff Shampoo </h1>
            <p class="quantity-text">Quantity : 200 ML </p>
            <p class="price-section">Price : Rs 500 /- </p>
            <p class="description"> How it works : Introducing Tugain Essentials Anti-Dandruff Shampoo, expertly curated with powerful actives to deliver an effective solution for your hair and scalp needs. Say goodbye to flakes and scalp irritation due to dandruff with a shampoo that truly cares for your hair. </p>

            <button class="view-button">View Product </button>
        </div>
    </div>





</div>




{% schema %}

{
   "name": "Custom-Product-Section",
   "tag": "section",
   "class": "section",
   "disabled_on": {
    "groups": ["header", "footer"]
               },
    "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Our Products",
          "label": "Heading"
        
        },

        {
            "type": "product",
            "label": "Product",
            "id": "product-id"
        
        },
        {
          "type": "color_background",
          "id": "background-color",
          "label": "Background Color",
          "default": "hsla(0, 0%, 0%, 1)"
        
        },
        {
            "type": "select",
            "id": "media_position",
            "options": [
              {
                "value": "left",
                "label": "t:sections.featured-product.settings.media_position.options__1.label"
              },
              {
                "value": "right",
                "label": "t:sections.featured-product.settings.media_position.options__2.label"
              }
            ],
            "default": "left",
            "label": "t:sections.featured-product.settings.media_position.label",
            "info": "t:sections.featured-product.settings.media_position.info"
          },
          {
            "type": "image_picker",
            "id": "image-section",
            "label": "Upload a pic"
           
           }
    ],
    "blocks": [
        {
           "type": "text",
           "name": "Text",
           "limit": 1,
           "settings": [
            {
               "type": "inline_richtext",
               "id": "textId",
               "label": "Enter text"
            },
            {
              "type": "inline_richtext",
              "id": "headwing",
              "label": "Heading"
            
            }
           ]
        },

            {
              "type": "textarea",
              "name": "Description",
              "limit": 1,
              "settings": [
                {   "type": "textarea",
                    "id": "description",
                    "label": "Product Description",
                    "default": "Introducing Tugain Essentials Anti-Dandruff Shampoo, expertly curated with powerful actives to deliver an effective solution for your hair and scalp needs. Say goodbye to flakes and scalp irritation due to dandruff with a shampoo that truly cares for your hair."
                }
              ]
             
            },
            {
                "type": "button",
                "limit": 1,
                "name": "t:sections.rich-text.blocks.buttons.name",
                "limit": 2,
                "settings": [
                  {
                    "type": "text",
                    "id": "button_label",
                    "default": "Button label",
                    "label": "t:sections.rich-text.blocks.buttons.settings.button_label_1.label",
                    "info": "t:sections.rich-text.blocks.buttons.settings.button_label_1.info"
                  },
                  {
                    "type": "url",
                    "id": "button_link",
                    "label": "t:sections.rich-text.blocks.buttons.settings.button_link_1.label"
                  }
                ]
              }


    ],
    "presets": [
        {
        "name": "custom-product-section",
        "blocks": [
            {
              "type": "text"
            },
            {
             "type": "textarea"
            },
            {
             "type": "button"
            }
        ]

        
        }
        
    ]
    



}



{% endschema %}

