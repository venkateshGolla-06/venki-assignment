
{% comment %} {{ 'custom-product.css' | asset_url | stylesheet_tag }} {% endcomment %}


{% style %}
*{
    box-sizing: border-box;
}

.custom-section-bg-container{

background-color: hsla(0, 0%, 0%, 1);
padding:5rem;
min-height: 100vh;
}
.custom-heading{

color: hsla(0, 0%, 100%, 1);
size: 48px;
padding: 20px 0px;

}

*, :after, :before {
    box-sizing: inherit;
}
.custom-product-content-alignment{
  display: flex;
  justify-content: center;
}

*{
color: #fff;
box-sizing: border-box;
padding:0px;
}
.view-button{
    background-color: hsla(0, 0%, 100%, 1);
    height: 51px;
    width: 170px;
    color:hsla(0, 0%, 0%, 1);
  border-radius: 8px;
  font-weight:700;
  font-size:16px;

}
.product-heading{
    color: hsla(310, 100%, 80%, 1);
    font-weight: 800px;

}
.content-container{
  padding: 5rem;
  width: 50%;
}
.image-container{
  width: 50%;
  border:none;
  background-image:radial-gradient(hsla(303, 90%, 35%, 0.3), hsla(0, 0%, 0%, 1), hsla(0, 0%, 0%, 1) )
}
.image-size{
    width:100%;
    height:100%;
    object-fit:cover;
}
.description{
    font-size: 24px;
    font-weight:600;
}
.description-color{
    font-weight:300;
    color:hsla(0, 0%, 100%, 1);
    font-size: 16px;

}
.quantity-text{
    font-size:24px;
    font-weight:700;
}
.price-section{
    font-size: 32px;
    font-weight:700;
}

@media screen and (max-width:1000px){
    .custom-product-content-alignment{
        flex-direction:column;
    }
    .content-container{
        width: auto;
        padding:2rem;
        
    }
    .image-container{
        width:100%;
    }
    .custom-section-bg-container{
      padding: 2rem;
    }
}


{% endstyle %}


<div class="custom-section-bg-container"  style="background-color: {{ section.settings.background-color }}">
  {% if section.settings.heading != black %}
    <h1 class="custom-heading" style="text-align:{{ section.settings.heading_position }}"> {{ section.settings.heading }} </h1>
  {% endif %}
     <div class="custom-product-content-alignment">
        <div class="image-container">
            <img class="image-size" src={{ section.settings.image-section | image_url}} >
        </div>
        <div class="content-container">
          {%- if section.settings.vendor != blank  -%}
            <p class="custom-caption">{{ section.settings.vendor }} </p>
          {%- endif -%}
            {%- if section.settings.Heading != blank  -%}
              <h1 class="product-heading"> {{ section.settings.Heading }} </h1>
            {%- endif -%}
            <p class="quantity-text">Quantity : 200 ML </p>
            {%- if section.settings.price != blank -%}
              <p class="price-section">Price : Rs {{ section.settings.price }} /- </p>
            {%-  endif -%}
            {%- if section.settings.product_description != blank -%}
            <p class="description"> How it works : <span class="description-color">{{ section.settings.product_description }} <span> </p>
            {% endif %}
            {%  if section.settings.button_label != blank %}   
             <button class="view-button"><a href={{ section.settings.button_link }} target="_blank" > {{ section.settings.button_label}} </a> </button>
           {% endif %}
        </div>
    </div>

</div>




{% schema %}

{
   "name": "Custom-Product-Section",
   "tag": "section",
   "class": "section",
   "disabled_on": {
    "groups": ["header", "footer"]
               },
    "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Our Products",
          "label": "Heading"
        
        },
        {
            "type": "product",
            "label": "Product",
            "id": "product"
        },
        {
          "type": "color_background",
          "id": "background-color",
          "label": "Background Color",
          "default": "hsla(0, 0%, 0%, 1)"
        
        },
        {
            "type": "select",
            "id": "heading_position",
            "options": [
              {
                "value": "left",
                "label": "t:sections.featured-product.settings.heading_position.options__1.label"
              },
              {
                "value": "Center",
                "label": "t:sections.featured-product.settings.heading_position.options__2.label"
              },
              {
                "value": "right",
                "label": "t:sections.featured-product.settings.heading_position.options__3.label"
              }
            ],
            "default": "left",
            "label": "Heading Position"
          },
          {
            "type": "image_picker",
            "id": "image-section",
            "label": "Upload a pic"
           
           },
           {
            "type": "text",
            "id": "vendor",
            "label": "Vendor Name",
            "default": "--- Cipla Health - Anti Dandruff Shampoo"
          
          },
          {
            "type": "inline_richtext",
            "id": "Heading",
            "label": "Product Heading",
            "default": "Tugain Essentials Anti Dandruff Shampoo "
          
          },
          {
            "type": "text",
            "id": "button_label",
            "default": "Button label",
            "label": "t:sections.rich-text.blocks.buttons.settings.button_label_1.label",
            "info": "t:sections.rich-text.blocks.buttons.settings.button_label_1.info"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button url"
          },
          {
            "type": "textarea",
            "id": "product_description",
            "label" : "product Description",
            "default": "Introducing Tugain Essentials Anti-Dandruff Shampoo, expertly curated with powerful actives to deliver an effective solution for your hair and scalp needs. Say goodbye to flakes and scalp irritation due to dandruff with a shampoo that truly cares for your hair."
          },
          {
             "type": "text",
             "label": "Price",
             "id" : "price",
             "default" : "500"
          
          }
    ],
    "presets": [
        {
        "name": "custom-product-section"
        }
        
    ]
  }



{% endschema %}

