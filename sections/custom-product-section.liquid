
{{ 'custom-product.css' | asset_url | stylesheet_tag }}


{% style %}

.custiom-section-bg-container{

background-color: hsla(0, 0%, 0%, 1);
min-height: 100vh;
padding: 40px 20px;
}
.custom-heading{

color: hsla(0, 0%, 100%, 1);
size: 48px;
padding: 20px 0px;

}
.custom-product-content-alignment{
display: flex;
justify-content: center;
align-items:center ;
width: 90%;
max-height: 400px;
}
.image-container{
width: 50%;

}
*{
color: #fff;
}
.view-button{
    background-color: hsla(0, 0%, 100%, 1);
    height: 51px;
    width: 170px;
    color:
hsla(0, 0%, 0%, 1);
}
.product-heading{
    color: hsla(310, 100%, 80%, 1);
    font-weight: 800px;

}
.content-container{
    width: 50%
}
.image-container{
    width: 50%;
    background-image:radial-gradient(hsla(303, 90%, 35%, 1, ),hsla(0, 0%, 0%, 1))
}

@media screen and (max-width:768px){
    .custom-product-content-alignment{
        flex-direction: column
    }
    .content-container{
        width: 100;
        
    }
    .image-container{
        width:100%;
    }
}


{% endstyle %}


<div class="custiom-section-bg-container">
    <h1 class="custom-heading"> Our Products </h1>
    <div class="custom-product-content-alignment">
        <div class="image-container">
            <img class="image-size" src="https://asset.cloudinary.com/dmqxmhvut/e1d7a6fe2789b86ead7cd3c7b0b3a4cd">
        </div>
        <div class="content-container">
            <p class="custom-caption"> --- Cipla Health - Anti Dandruff Shampoo </p>
            <h1 class="product-heading"> Tugain Essentials Anti Dandruff Shampoo </h1>
            <p class="quantity-text">Quantity : 200 ML </p>
            <p class="price-section">Price : Rs 500 /- </p>
            <p class="description"> How it works : Introducing Tugain Essentials Anti-Dandruff Shampoo, expertly curated with powerful actives to deliver an effective solution for your hair and scalp needs. Say goodbye to flakes and scalp irritation due to dandruff with a shampoo that truly cares for your hair. </p>

            <button class="view-button">View Product </button>
        </div>
    </div>





</div>







{% schema %}
{
    "name": "Custom-product-section",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
        {
           "type": "text",
           "id": "heading",
           "label": "Enter Heading",
           "default": "Our Products"
        },
        {
            "type": "product",
            "id": "sec-product",
            "label": "t:sections.featured-product.settings.product.label"
          },
          {
            "type": "color_background",
            "id": "color_background",
            "label": "Background Color",
            "default": "black"
          }
          ,
          {
         "type": "image_picker",
         "id": "image-section",
         "label": "Upload a pic"
        
        }
    ],
        
    "presets": [

        {
            "name": "custom product section"
        
        
        }
    ]
        
        }

    





    







{% endschema %}